<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popBackground"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="30dip"
    android:layout_marginLeft="30dip"
    android:layout_marginRight="30dip"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/popBackgroundTop"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:background="@drawable/popup_dialog_top_bg"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageTip"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/common_avatar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/btnTipOne"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/popup_dialog_tipone_bg"
                android:gravity="center" >

                <TextView
                    android:id="@+id/txtTipOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="1111111"
                    android:textColor="@color/popup_text"
                    android:textSize="@dimen/PopBasicTextSize" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnTipTwo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/popup_dialog_tiptwo_bg"
                android:gravity="center" >

                <TextView
                    android:id="@+id/txtTipTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="22222"
                    android:textColor="@color/popup_text"
                    android:textSize="@dimen/PopBasicTextSize" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/popup_divide" />

    <LinearLayout
        android:id="@+id/ButtonLinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:padding="0dip" >

        <LinearLayout
            android:id="@+id/btnRight"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/popup_dialog_single_bg"
            android:gravity="center" >

            <TextView
                android:id="@+id/txtRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/popup_text"
                android:textSize="@dimen/PopBasicTextSize" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>